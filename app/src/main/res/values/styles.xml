<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5sp</item>
        <item name="android:layout_marginStart">5sp</item>
        <item name="android:layout_marginLeft">5sp</item>
        <item name="android:layout_marginTop">5sp</item>
        <item name="android:layout_marginEnd">5sp</item>
        <item name="android:layout_marginRight">5sp</item>
        <item name="android:layout_marginBottom">5sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="linearLayoutH">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">3sp</item>
        <item name="android:layout_marginStart">3sp</item>
        <item name="android:layout_marginLeft">3sp</item>
        <item name="android:layout_marginTop">3sp</item>
        <item name="android:layout_marginEnd">3sp</item>
        <item name="android:layout_marginRight">3sp</item>
        <item name="android:layout_marginBottom">3sp</item>
        <item name="android:layout_weight">3sp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ButtonSave">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">5sp</item>
        <item name="android:layout_marginStart">5sp</item>
        <item name="android:layout_marginLeft">5sp</item>
        <item name="android:layout_marginTop">5sp</item>
        <item name="android:layout_marginEnd">5sp</item>
        <item name="android:layout_marginRight">5sp</item>
        <item name="android:layout_marginBottom">5sp</item>
        <item name="android:background">#FDFDFD</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">20sp</item>
        <item name="android:layout_marginStart">5sp</item>
        <item name="android:layout_marginLeft">5sp</item>
        <item name="android:layout_marginTop">5sp</item>
        <item name="android:layout_marginEnd">5sp</item>
        <item name="android:layout_marginRight">5sp</item>
        <item name="android:layout_marginBottom">5sp</item>
        <item name="android:inputType">textCapSentences|textCapWords|textCapCharacters</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="coloredittext">
        <item name="android:textColor">#FF0000</item>
    </style>

</resources>